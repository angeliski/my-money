<% content_for :title, "Categorias" %>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <div class="mb-4 rounded-lg bg-green-900/30 border border-green-700 p-4">
      <p class="text-sm font-medium text-green-300"><%= notice %></p>
    </div>
  <% end %>

  <!-- Header -->
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-white">Categorias</h1>
      <p class="mt-2 text-sm text-gray-400">Lista de todas as categorias cadastradas no sistema.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to "Nova Categoria", new_category_path, class: "block rounded-md bg-cyan-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-cyan-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cyan-600" %>
    </div>
  </div>

  <!-- Table -->
  <div class="mt-8">
    <div class="overflow-hidden shadow ring-1 ring-slate-700 sm:rounded-lg">
      <table class="min-w-full divide-y divide-slate-700">
        <thead class="bg-slate-800">
          <tr>
            <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wide">Nome</th>
            <th scope="col" class="relative px-3 py-3">
              <span class="sr-only">Ações</span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-slate-900 divide-y divide-slate-700">
          <% if @categories.any? %>
            <% @categories.each do |category| %>
              <tr id="<%= dom_id category %>" class="hover:bg-slate-800">
                <td class="px-3 py-4 text-sm font-medium text-white">
                  <%= link_to category.name, category, class: "text-cyan-400 hover:text-cyan-300" %>
                </td>
                <td class="px-3 py-4 text-right text-sm font-medium">
                  <div class="flex justify-end gap-2">
                    <%= link_to category, class: "text-cyan-400 hover:text-cyan-300", title: "Ver detalhes" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>
                    <%= link_to edit_category_path(category), class: "text-cyan-400 hover:text-cyan-300", title: "Editar" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>
                    <%= button_to category, method: :delete, class: "text-red-400 hover:text-red-300", title: "Excluir", data: { turbo_confirm: "Tem certeza que deseja excluir esta categoria?" } do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="2" class="px-3 py-16 text-center">
                <div class="mx-auto w-24 h-24 bg-slate-800 rounded-full flex items-center justify-center mb-6">
                  <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-white mb-2">Nenhuma categoria encontrada</h3>
                <p class="text-gray-400 mb-6">Comece criando sua primeira categoria.</p>
                <%= link_to "Nova Categoria", new_category_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-cyan-600 hover:bg-cyan-500" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
