<!-- Filter Bar -->
<div class="bg-slate-800 shadow-sm ring-1 ring-slate-700 sm:rounded-xl p-6 mb-6">
  <%= form_with url: users_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-4" do |form| %>

    <div class="md:col-span-3 lg:col-span-2">
      <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.text_field :name,
          value: params[:name],
          class: "mt-2 block w-full rounded-md border-0 py-1.5 bg-slate-700 text-white shadow-sm ring-1 ring-inset ring-slate-600 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6" %>
    </div>

    <div class="md:col-span-3 lg:col-span-2">
      <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.text_field :email,
          value: params[:email],
          class: "mt-2 block w-full rounded-md border-0 py-1.5 bg-slate-700 text-white shadow-sm ring-1 ring-inset ring-slate-600 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6" %>
    </div>


    <div class="md:col-span-3 lg:col-span-2">
      <%= form.label :role, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.select :role, options_for_select(User.roles.map { |key, value| [key.humanize, key] }, params[:role]), {prompt: "Select Role"}, class: "mt-2 block w-full rounded-md border-0 py-1.5 bg-slate-700 text-white shadow-sm ring-1 ring-inset ring-slate-600 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6" %>
    </div>

    <!-- Filter Actions -->
    <div class="md:col-span-3 lg:col-span-6 flex flex-col sm:flex-row justify-between items-center gap-2 mt-6">
      <div class="flex flex-col">
        <div class="flex items-center gap-4">
          <%= form.submit  "Filtrar", class: "rounded-md bg-cyan-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-cyan-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cyan-600 cursor-pointer" %>
          <%= link_to users_path,
              class: "rounded-md bg-slate-700 px-3 py-2 text-sm font-semibold text-white shadow-sm ring-1 ring-inset ring-slate-600 hover:bg-slate-600" do %>
            Limpar Filtros
          <% end %>
        </div>
        <div class="text-sm text-gray-300 mt-2">
          <span>
            <%= @pagy.count %> usuários encontrados
          </span>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <!-- Per Page Selector -->
        <div class="flex items-center gap-2">
          <%= form.label :per_page, "Itens por página:", class: "text-sm text-gray-300" %>
          <%= form.select :per_page,
              options_for_select([
                ["10", "10"],
                ["25", "25"],
                ["50", "50"],
                ["100", "100"]
              ], params[:per_page] || "10"),
              {},
              { class: "rounded-md border-0 py-1.5 bg-slate-700 text-white shadow-sm ring-1 ring-inset ring-slate-600 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
