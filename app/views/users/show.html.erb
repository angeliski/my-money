<% content_for :title, "Showing user" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-900/30 mb-5 text-green-400 font-medium rounded-md inline-block ring-1 ring-inset ring-green-600/40" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl text-white">Showing user</h1>

  <%= render @user %>

  <%= link_to "Edit this user", edit_user_path(@user), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-slate-700 hover:bg-slate-600 text-white inline-block font-medium ring-1 ring-slate-600" %>
  <%= link_to "Back to users", users_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-slate-700 hover:bg-slate-600 text-white inline-block font-medium ring-1 ring-slate-600" %>
  <%= button_to "Destroy this user", @user, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
