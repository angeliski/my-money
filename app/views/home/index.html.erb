<div class="min-h-screen bg-[#1E1E1E] pb-24">
  <!-- Header -->
  <div class="bg-[#2D2D2D] px-6 pt-6 pb-4">
    <!-- Month selector -->
    <div class="flex items-center justify-center gap-4 mb-6">
      <%= link_to root_path(month: (@month - 1.month).strftime('%Y-%m')), class: "text-[#E5E5E5]" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>

      <div class="flex items-center gap-2">
        <span class="text-2xl font-semibold text-white">
          <%= I18n.l(@month, format: '%B').capitalize %>
        </span>
      </div>

      <%= link_to root_path(month: (@month + 1.month).strftime('%Y-%m')), class: "text-[#E5E5E5]" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      <% end %>
    </div>

    <!-- Total balance -->
    <div class="text-center">
      <div class="text-sm text-[#A3A3A3] mb-1">Saldo em contas</div>
      <div class="text-4xl font-bold text-white">
        <%= number_to_currency(@total_balance / 100.0, unit: 'R$', precision: 2, delimiter: '.', separator: ',') %>
      </div>
    </div>
  </div>

  <!-- Income and Expenses Cards -->
  <div class="grid grid-cols-2 gap-4 px-6 mt-4">
    <!-- Income Card -->
    <div class="bg-[#2D2D2D] rounded-2xl p-4 shadow-sm">
      <div class="flex items-center gap-3 mb-2">
        <div class="w-10 h-10 rounded-full bg-[#10B981] flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
          </svg>
        </div>
        <div>
          <div class="text-xs text-[#A3A3A3]">Receitas</div>
          <div class="text-lg font-bold text-[#10B981]">
            <%= number_to_currency(@monthly_income / 100.0, unit: 'R$', precision: 2, delimiter: '.', separator: ',') %>
          </div>
        </div>
      </div>
    </div>

    <!-- Expenses Card -->
    <div class="bg-[#2D2D2D] rounded-2xl p-4 shadow-sm">
      <div class="flex items-center gap-3 mb-2">
        <div class="w-10 h-10 rounded-full bg-[#F87171] flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7-7m0 0l-7 7m7-7v18"></path>
          </svg>
        </div>
        <div>
          <div class="text-xs text-[#A3A3A3]">Despesas</div>
          <div class="text-lg font-bold text-[#F87171]">
            <%= number_to_currency(@monthly_expenses / 100.0, unit: 'R$', precision: 2, delimiter: '.', separator: ',') %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Accounts Section -->
  <div class="px-6 mt-8">
    <div class="mb-4">
      <h2 class="text-xl font-semibold text-white">Contas</h2>
    </div>

    <div class="bg-[#2D2D2D] rounded-2xl shadow-sm overflow-hidden">
      <% @accounts.each_with_index do |account, index| %>
        <div class="flex items-center gap-3 p-4 <%= 'border-t border-[#3D3D3D]' if index > 0 %>">
          <div class="w-10 h-10 rounded-full bg-[#7C3AED] flex items-center justify-center text-white font-semibold">
            <%= account.name[0..1].upcase %>
          </div>
          <div>
            <div class="font-medium text-white"><%= account.name %></div>
            <div class="text-sm <%= account.balance_cents >= 0 ? 'text-[#10B981]' : 'text-[#F87171]' %>">
              <%= number_to_currency(account.balance_cents / 100.0, unit: 'R$', precision: 2, delimiter: '.', separator: ',') %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Total -->
      <div class="p-4 border-t-2 border-[#3D3D3D] bg-[#1E1E1E]">
        <div class="flex items-center justify-between">
          <div class="font-semibold text-white">Total</div>
          <div class="text-lg font-bold text-white">
            <%= number_to_currency(@total_balance / 100.0, unit: 'R$', precision: 2, delimiter: '.', separator: ',') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
