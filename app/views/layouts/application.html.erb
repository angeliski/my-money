<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "MyMoney" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-[#1E1E1E]">
    <div x-data="{ userDropdownOpen: false, mobileNavOpen: false }">
  <!-- Page Container -->
  <div
    id="page-container"
    class="mx-auto flex min-h-screen w-full min-w-[320px] flex-col bg-[#1E1E1E]"
  >
    <!-- Page Header -->
    <header id="page-header" class="z-1 flex flex-none items-center bg-[#1E1E1E] border-b border-[#3D3D3D]">
      <div class="container mx-auto px-4 lg:px-8 xl:max-w-7xl">
        <div
          class="flex justify-between py-4"
        >
          <!-- Left Section -->
          <div class="flex items-center">
            <!-- Logo -->
            <a
              href="/"
              class="text-md group inline-flex items-center gap-2 font-bold tracking-wide text-white hover:text-[#7C3AED] active:text-[#6D28D9] sm:text-lg"
            >
              <div class="h-8 w-8 flex items-center justify-center bg-[#7C3AED] rounded">
            <%= image_tag "icone.svg", alt: "Logo", class: "h-6 w-6" %>
          </div>
              <span>MyMoney</span>
            </a>
            <!-- END Logo -->
          </div>
          <!-- END Left Section -->

          <!-- Right Section -->
          <div class="flex items-center gap-1 lg:gap-5">
            <!-- Header Navigation -->
            <nav class="flex items-center gap-2">
            </nav>
            <!-- END Header Navigation -->

            <!-- User Dropdown -->
            <% if user_signed_in? %>
              <div class="relative inline-block">
                <!-- Dropdown Toggle Button -->
                <button
                  type="button"
                  class="group flex items-center justify-between rounded-md border border-[#4D4D4D] px-2.5 py-2 text-sm font-semibold text-white hover:bg-[#2D2D2D] hover:text-[#7C3AED] active:border-[#3D3D3D] active:bg-[#2D2D2D] sm:gap-2"
                  id="tk-dropdown-layouts-user"
                  aria-haspopup="true"
                  x-bind:aria-expanded="userDropdownOpen"
                  x-on:click="userDropdownOpen = true"
                >
                  <span class="sm:hidden"><%= current_user.name.present? ? current_user.name.split(' ').map(&:first).join.upcase[0..1] : current_user.email[0..1].upcase %></span>
                  <span class="hidden sm:inline-block"><%= current_user.name.present? ? current_user.name : current_user.email.split('@').first %></span>
                  <svg
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                    class="hi-solid hi-chevron-down inline-block size-5 text-gray-400"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                </button>
                <!-- END Dropdown Toggle Button -->

                <!-- Dropdown -->
                <div
                  x-cloak
                  x-show="userDropdownOpen"
                  x-transition:enter="transition ease-out duration-150"
                  x-transition:enter-start="opacity-0 scale-90"
                  x-transition:enter-end="opacity-100 scale-100"
                  x-transition:leave="transition ease-in duration-75"
                  x-transition:leave-start="opacity-100 scale-100"
                  x-transition:leave-end="opacity-0 scale-90"
                  x-on:click.outside="userDropdownOpen = false"
                  role="menu"
                  aria-labelledby="tk-dropdown-layouts-user"
                  class="absolute end-0 mt-2 w-48 rounded-lg shadow-xl shadow-black/20 ltr:origin-top-right rtl:origin-top-left"
                >
                  <div
                    class="divide-y divide-[#3D3D3D] rounded-lg bg-[#2D2D2D] ring-1 ring-[#3D3D3D]"
                  >
                    <div class="space-y-1 p-2">
                      <div class="px-3 py-2 text-xs text-[#A3A3A3]">
                        <%= current_user.email %>
                      </div>
                    </div>
                    <div class="space-y-1 p-2">
                      <%= button_to destroy_user_session_path, method: :delete, class: "group flex w-full items-center gap-2 rounded-md px-3 py-2 text-sm font-medium text-white hover:bg-[#3D3D3D] hover:text-[#7C3AED]" do %>
                        <svg
                          fill="currentColor"
                          viewBox="0 0 20 20"
                          xmlns="http://www.w3.org/2000/svg"
                          class="hi-solid hi-lock-closed inline-block size-5 text-[#A3A3A3] group-hover:text-[#7C3AED]"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          ></path>
                        </svg>
                        <span>Sair</span>
                      <% end %>
                    </div>
                  </div>
                </div>
                <!-- END Dropdown -->
              </div>
            <% end %>
            <!-- END User Dropdown -->

            <!-- Toggle Mobile Navigation -->
            <div class="lg:hidden">
              <button
                type="button"
                class="group flex items-center justify-between gap-2 rounded-md border border-[#4D4D4D] px-2.5 py-2 text-sm font-semibold text-white hover:bg-[#2D2D2D] hover:text-[#7C3AED] active:border-[#3D3D3D] active:bg-[#2D2D2D]"
                x-on:click="mobileNavOpen = !mobileNavOpen"
              >
                <svg
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                  class="hi-solid hi-menu inline-block size-5"
                >
                  <path
                    fill-rule="evenodd"
                    d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
              </button>
            </div>
            <!-- END Toggle Mobile Navigation -->
          </div>
          <!-- END Right Section -->
        </div>

        <!-- Mobile Navigation -->
        <nav
          x-cloak
          x-show="mobileNavOpen"
          class="flex flex-col py-4 lg:hidden bg-[#2D2D2D] border-t border-[#3D3D3D]"
        >
          <%= link_to root_path, class: "group flex items-center justify-between gap-2 rounded-md border border-transparent bg-[#3D3D3D] px-2.5 py-2 text-sm font-semibold text-[#7C3AED] active:border-[#4D4D4D]" do %>
            <svg
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              class="hi-solid hi-home inline-block size-5 flex-none"
            >
              <path
                d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
              ></path>
            </svg>
            <span class="grow">Principal</span>
          <% end %>
          <hr class="h-5 border-0" />
          <div class="space-y-1.5">
            <%= link_to transactions_path, class: "group flex items-center justify-between gap-2 rounded-md border border-transparent px-2.5 py-2 text-sm font-semibold text-white hover:bg-slate-700 hover:text-cyan-400 active:border-slate-600" do %>
              <svg
                class="hi-mini hi-arrows-right-left inline-block size-5 flex-none text-gray-400 group-hover:text-cyan-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M13.2 2.24a.75.75 0 00.04 1.06l2.1 1.95H6.75a.75.75 0 000 1.5h8.59l-2.1 1.95a.75.75 0 101.02 1.1l3.5-3.25a.75.75 0 000-1.1l-3.5-3.25a.75.75 0 00-1.06.04zm-6.4 8a.75.75 0 00-1.06-.04l-3.5 3.25a.75.75 0 000 1.1l3.5 3.25a.75.75 0 101.02-1.1l-2.1-1.95h8.59a.75.75 0 000-1.5H4.66l2.1-1.95a.75.75 0 00.04-1.06z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="grow">Transações</span>
            <% end %>
            <%= link_to accounts_path, class: "group flex items-center justify-between gap-2 rounded-md border border-transparent px-2.5 py-2 text-sm font-semibold text-white hover:bg-slate-700 hover:text-cyan-400 active:border-slate-600" do %>
              <svg
                class="hi-mini hi-wallet inline-block size-5 flex-none text-gray-400 group-hover:text-cyan-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  d="M1 4.25a3.733 3.733 0 012.25-.75h13.5c.844 0 1.623.279 2.25.75A2.25 2.25 0 0016.75 2H3.25A2.25 2.25 0 001 4.25zM1 7.25a3.733 3.733 0 012.25-.75h13.5c.844 0 1.623.279 2.25.75A2.25 2.25 0 0016.75 5H3.25A2.25 2.25 0 001 7.25zM7 8a1 1 0 011 1 2 2 0 104 0 1 1 0 112 0 4 4 0 11-8 0 1 1 0 011-1z"
                />
              </svg>
              <span class="grow">Contas</span>
            <% end %>
            <%= link_to categories_path, class: "group flex items-center justify-between gap-2 rounded-md border border-transparent px-2.5 py-2 text-sm font-semibold text-white hover:bg-slate-700 hover:text-cyan-400 active:border-slate-600" do %>
              <svg
                class="hi-mini hi-tag inline-block size-5 flex-none text-gray-400 group-hover:text-cyan-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.5 3.5A1.5 1.5 0 004 5v4.5a1.5 1.5 0 003 0V5a1.5 1.5 0 00-1.5-1.5zM12.5 3.5A1.5 1.5 0 0011 5v4.5a1.5 1.5 0 003 0V5a1.5 1.5 0 00-1.5-1.5zM10 12a.75.75 0 01.75.75v2.5a.75.75 0 01-1.5 0v-2.5A.75.75 0 0110 12z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="grow">Categorias</span>
            <% end %>
          </div>
        </nav>
        <!-- END Mobile Navigation -->
      </div>
    </header>
    <!-- END Page Header -->

    <!-- Page Content -->
    <main id="page-content" class="flex max-w-full flex-auto flex-col bg-[#1E1E1E]">
      <% if flash[:alert] %>
        <div class="bg-red-900/30 border border-red-700 text-red-300 px-4 py-3 rounded-lg relative mx-4 mt-4" role="alert">
          <span class="block sm:inline"><%= flash[:alert] %></span>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="bg-green-900/30 border border-green-700 text-green-300 px-4 py-3 rounded-lg relative mx-4 mt-4" role="alert">
          <span class="block sm:inline"><%= flash[:notice] %></span>
        </div>
      <% end %>
      <div class="container mx-auto p-4 lg:p-8 xl:max-w-7xl">
        <div class="grid grid-cols-1 md:gap-20 lg:grid-cols-12">
          <!-- Sidebar Navigation -->
          <nav class="hidden lg:col-span-3 lg:block">
            <%= link_to root_path, class: "group flex items-center justify-between gap-2 rounded-md border border-transparent px-2.5 py-2 text-sm font-semibold text-white hover:bg-slate-700 hover:text-cyan-400 active:border-slate-600" do %>
              <svg
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                class="hi-mini hi-cursor-arrow-rays inline-block size-5 flex-none text-gray-400 group-hover:text-cyan-400"
              >
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              <span class="grow">Principal</span>
            <% end %>
            <hr class="h-5 border-0" />
            <div class="space-y-1.5">
              <%= link_to transactions_path, class: "group flex items-center justify-between gap-2 rounded-md border border-transparent px-2.5 py-2 text-sm font-semibold text-white hover:bg-slate-700 hover:text-cyan-400 active:border-slate-600" do %>
                <svg
                  class="hi-mini hi-arrows-right-left inline-block size-5 flex-none text-gray-400 group-hover:text-cyan-400"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M13.2 2.24a.75.75 0 00.04 1.06l2.1 1.95H6.75a.75.75 0 000 1.5h8.59l-2.1 1.95a.75.75 0 101.02 1.1l3.5-3.25a.75.75 0 000-1.1l-3.5-3.25a.75.75 0 00-1.06.04zm-6.4 8a.75.75 0 00-1.06-.04l-3.5 3.25a.75.75 0 000 1.1l3.5 3.25a.75.75 0 101.02-1.1l-2.1-1.95h8.59a.75.75 0 000-1.5H4.66l2.1-1.95a.75.75 0 00.04-1.06z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="grow">Transações</span>
              <% end %>
              <%= link_to accounts_path, class: "group flex items-center justify-between gap-2 rounded-md border border-transparent px-2.5 py-2 text-sm font-semibold text-white hover:bg-slate-700 hover:text-cyan-400 active:border-slate-600" do %>
                <svg
                  class="hi-mini hi-wallet inline-block size-5 flex-none text-gray-400 group-hover:text-cyan-400"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    d="M1 4.25a3.733 3.733 0 012.25-.75h13.5c.844 0 1.623.279 2.25.75A2.25 2.25 0 0016.75 2H3.25A2.25 2.25 0 001 4.25zM1 7.25a3.733 3.733 0 012.25-.75h13.5c.844 0 1.623.279 2.25.75A2.25 2.25 0 0016.75 5H3.25A2.25 2.25 0 001 7.25zM7 8a1 1 0 011 1 2 2 0 104 0 1 1 0 112 0 4 4 0 11-8 0 1 1 0 011-1z"
                  />
                </svg>
                <span class="grow">Contas</span>
              <% end %>
              <%= link_to categories_path, class: "group flex items-center justify-between gap-2 rounded-md border border-transparent px-2.5 py-2 text-sm font-semibold text-white hover:bg-slate-700 hover:text-cyan-400 active:border-slate-600" do %>
                <svg
                  class="hi-mini hi-tag inline-block size-5 flex-none text-gray-400 group-hover:text-cyan-400"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.5 3.5A1.5 1.5 0 004 5v4.5a1.5 1.5 0 003 0V5a1.5 1.5 0 00-1.5-1.5zM12.5 3.5A1.5 1.5 0 0011 5v4.5a1.5 1.5 0 003 0V5a1 1 0 00-1.5-1.5zM10 12a.75.75 0 01.75.75v2.5a.75.75 0 01-1.5 0v-2.5A.75.75 0 0110 12z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="grow">Categorias</span>
              <% end %>
            </div>
          </nav>
          <!-- END Navigation -->

          <!-- Main Content -->
          <div class="lg:col-span-9">
      <%= yield %>
    </div>
          <!-- END Main Content -->
        </div>
      </div>
    </main>
    <!-- END Page Content -->
  </div>
  <!-- END Page Container -->
</div>
  </body>
</html>
