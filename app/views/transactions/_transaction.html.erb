<div id="<%= dom_id(transaction) %>" class="bg-slate-700 rounded-lg p-4 flex items-center justify-between hover:bg-slate-600 transition">
  <div class="flex-1">
    <div class="flex items-center gap-2">
      <span class="text-2xl"><%= transaction.category.icon rescue '💰' %></span>
      <div>
        <div class="font-medium text-slate-100"><%= transaction.description %></div>
        <div class="text-sm text-slate-400">
          <%= transaction.category.name %> • <%= transaction.account.name %>
          <% if transaction.template? %>
            <span class="inline-block bg-cyan-900 text-cyan-200 text-xs px-2 py-0.5 rounded ml-1">
              Recorrente
            </span>
          <% elsif transaction.generated? && transaction.pending_by_date? %>
            <span class="inline-block bg-yellow-900 text-yellow-200 text-xs px-2 py-0.5 rounded ml-1">
              Pendente
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center gap-4">
    <div class="text-right">
      <div class="font-semibold <%= transaction.income? ? 'text-green-400' : 'text-red-400' %>">
        <%= transaction.income? ? '+' : '-' %>
        <%= number_to_currency(transaction.amount_cents / 100.0, unit: 'R$ ') %>
      </div>
      <div class="text-xs text-slate-400">
        <%= l(transaction.transaction_date, format: :short) %>
      </div>
    </div>

    <div class="flex gap-2">
      <% if transaction.generated? && transaction.pending_by_date? && !transaction.manually_effectuated? %>
        <%= button_to mark_as_paid_transaction_path(transaction),
            method: :post,
            class: "text-green-400 hover:text-green-300 text-sm",
            data: { turbo: true } do %>
          ✓ Pagar
        <% end %>
      <% elsif transaction.manually_effectuated? && transaction.pending_by_date? %>
        <%= button_to mark_as_paid_transaction_path(transaction),
            method: :delete,
            class: "text-yellow-400 hover:text-yellow-300 text-sm",
            data: { turbo: true } do %>
          ✗ Desmarcar
        <% end %>
      <% end %>

      <%= link_to edit_transaction_path(transaction),
          class: "text-cyan-400 hover:text-cyan-300",
          data: { turbo_frame: "transaction_modal" } do %>
        ✏️
      <% end %>

      <%= button_to transaction_path(transaction),
          method: :delete,
          class: "text-red-400 hover:text-red-300",
          data: { turbo: true, turbo_confirm: "Tem certeza que deseja excluir esta transação?" } do %>
        🗑️
      <% end %>
    </div>
  </div>
</div>
