<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-slate-100">Transações</h1>
    <%= link_to "Nova Transação", new_transaction_path,
        class: "bg-cyan-600 hover:bg-cyan-700 text-white px-4 py-2 rounded-lg",
        data: { turbo_frame: "transaction_modal" } %>
  </div>

  <%= turbo_frame_tag "transaction_modal" %>

  <div class="bg-slate-800 rounded-lg p-6 mb-6">
    <%= render "filters" %>
  </div>

  <div class="bg-slate-800 rounded-lg p-6">
    <div class="mb-4">
      <%= render "month_selector", month: @month %>
    </div>

    <%= render "totals", totals: @totals %>

    <%= turbo_frame_tag "transactions_list", class: "mt-6" do %>
      <%= render "list", transactions: @transactions %>
    <% end %>

    <div class="mt-4">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
</div>
