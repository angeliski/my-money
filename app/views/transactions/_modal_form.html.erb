<%= turbo_frame_tag "transaction_modal" do %>
  <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center px-4 z-50" data-controller="modal">
    <div class="bg-slate-800 rounded-lg p-6 max-w-2xl w-full max-h-[90vh] overflow-y-auto" data-modal-target="content">
      <h2 class="text-2xl font-bold text-slate-100 mb-4">
        <%= transaction.new_record? ? "Nova Transação" : "Editar Transação" %>
      </h2>

      <%= render "form", transaction: transaction %>
    </div>
  </div>
<% end %>
