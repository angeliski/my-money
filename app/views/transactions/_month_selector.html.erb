<div class="flex items-center justify-between">
  <%
    year, month_num = month.split("-").map(&:to_i)
    current_date = Date.new(year, month_num, 1)
    previous_month = (current_date - 1.month).strftime('%Y-%m')
    next_month = (current_date + 1.month).strftime('%Y-%m')
  %>

  <%= link_to transactions_path(month: previous_month),
      class: "text-cyan-400 hover:text-cyan-300" do %>
    ← Anterior
  <% end %>

  <h2 class="text-xl font-semibold text-slate-100">
    <%= I18n.l(current_date, format: '%B de %Y').capitalize %>
  </h2>

  <%= link_to transactions_path(month: next_month),
      class: "text-cyan-400 hover:text-cyan-300" do %>
    Próximo →
  <% end %>
</div>
