<% content_for :title, "MyMoney - Criar Conta" %>

<div class="w-full">
    <h1 class="text-2xl font-bold mb-8 text-center text-white">Criar Conta</h1>

    <%= form_for(resource,
                 as: resource_name,
                 url: registration_path(resource_name),
                 html: {
                         class: "space-y-6"
                 }
        ) do |f| %>

        <%= devise_error_messages! %>

        <div class="space-y-2">
            <%= f.label :email, class: "block text-sm font-medium text-white" %>
            <%= f.email_field :email,
                              autocomplete: "email",
                              placeholder: "Digite seu email",
                              class: "w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-200" %>
        </div>

        <div class="space-y-2">
            <%= f.label :password, class: "block text-sm font-medium text-white" %>
            <% if @minimum_password_length %>
                <small class="text-blue-200">(<%= @minimum_password_length %> caracteres m√≠nimo)</small>
            <% end %>
            <%= f.password_field :password,
                                 autocomplete: "new-password",
                                 placeholder: "Digite sua senha",
                                 class: "w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-200"
            %>
        </div>

        <div class="space-y-2">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-white" %>
            <%= f.password_field :password_confirmation,
                                 autocomplete: "new-password",
                                 placeholder: "Confirme sua senha",
                                 class: "w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-200"
            %>
        </div>

        <div class="pt-4">
            <%= f.submit "Criar Conta",
                         class: "w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-bold py-3 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-transparent transition-all duration-200 transform hover:scale-105 shadow-lg"
            %>
        </div>

        <div class="text-center pt-4">
            <%= render "devise/shared/links" %>
        </div>

    <% end %>

    <%= render "devise/shared/form_footer" %>
</div>
