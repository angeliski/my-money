<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="bg-white py-8 px-4 shadow-2xl rounded-lg sm:px-10">
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="text-center text-3xl font-extrabold text-gray-900 mb-6">
          <%= t "devise.invitations.new.header" %>
        </h2>
      </div>

      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <% resource.class.invite_key_fields.each do |field| -%>
          <div>
            <%= f.label field, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field field, 
                  autocomplete: field == :email ? "email" : "off",
                  class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  placeholder: field == :email ? "nome@exemplo.com" : field.to_s.humanize %>
            </div>
          </div>
        <% end -%>

        <div>
          <%= f.submit t("devise.invitations.new.submit_button"), 
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">
              <%= t("devise.shared.links.back") %>
            </span>
          </div>
        </div>

        <div class="mt-6 text-center">
          <%= link_to root_path, class: "font-medium text-indigo-600 hover:text-indigo-500" do %>
            <i class="fas fa-arrow-left mr-2"></i><%= t("devise.shared.links.back_to_login") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
